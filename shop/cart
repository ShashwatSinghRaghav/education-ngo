    <script type="text/javascript">

        $(".update-cart").click(function (e) {
            e.preventDefault();

            var ele = $(this);

            $.ajax({
                url: 'https://www.karuna.org/shop/update-cart',
                method: "patch",
                data: {_token: '5MI5GyweWCbXl3aw6ejoWWgxDCs4rLdQTnd0oKvq', id: ele.attr("data-id"), quantity: ele.parents("tr").find(".quantity").val()},
                success: function (response) {
                    window.location.reload();
                }
            });
        });

        $(".remove-from-cart").click(function (e) {
            e.preventDefault();

            var ele = $(this);

            if(confirm("Are you sure")) {
                $.ajax({
                    url: 'https://www.karuna.org/shop/remove-from-cart',
                    method: "DELETE",
                    data: {_token: '5MI5GyweWCbXl3aw6ejoWWgxDCs4rLdQTnd0oKvq', id: ele.attr("data-id")},
                    success: function (response) {
                        window.location.reload();
                    }
                });
            }
        });
    </script>
